// Available variables which can be used inside of strings.
// ${workspaceRoot}: the root folder of the team
// ${file}: the current opened file
// ${relativeFile}: the current opened file relative to workspaceRoot
// ${fileBasename}: the current opened file's basename
// ${fileDirname}: the current opened file's dirname
// ${fileExtname}: the current opened file's extension
// ${cwd}: the current working directory of the spawned process
{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "windows": {
        "options": {
            "shell": {
                "executable": "powershell.exe",
                "args": [ "-ExecutionPolicy Bypass", "-NoProfile", "-Command" ],
            },
        },
    },
    "linux": {
        "options": {
            "shell": {
                "executable": "/usr/bin/pwsh",
                "args": [ "-NoProfile", "-Command" ],
            },
        },
    },
    "osx": {
        "options": {
            "shell": {
                "executable": "/usr/local/bin/pwsh",
                "args": [ "-NoProfile", "-Command" ],
            },
        },
    },
    "type": "shell",
    "tasks": [
        {
            "label": "Clean",
            "command": "Invoke-Build",
            "args": [ "-Task", "Clean" ],
        },
        {
            "label": "Build",
            "command": "Invoke-Build",
            "group": {
                "kind": "build",
                "isDefault": true,
            },
            "problemMatcher": {
                "base": "$msCompile",
                "fileLocation": "absolute",
            },
        },
        {
            "label": "Test",
            "command": "Invoke-Build",
            "args": [ "-Task", "Test" ],
            "group": {
                "kind": "test",
                "isDefault": true,
            },
        },
        {
            "label": "Test With Coverage",
            "group": "test",
            "command": "Invoke-Build",
            "args": [ "-Task", "Test", "-GenerateCodeCoverage" ],
        },
        {
            "label": "Build and Test",
            "group": "test",
            "command": "Invoke-Build",
            "args": [ "-Task", "Prerelease"],
        },
        {
            "label": "Build and Test With Coverage",
            "group": "test",
            "command": "Invoke-Build",
            "args": [ "-Task", "Prerelease", "-GenerateCodeCoverage"],
        },
        {
            "label": "Install",
            "command": "Invoke-Build",
            "args": [ "-Task", "Install", "-Configuration", "Release" ],
        }
    ]
}

